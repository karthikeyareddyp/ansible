---
 - hosts: all
   connection: ssh

   tasks:
     - name: creating a file on all servers
       file: path={{item}} state=touch
       with_items:
         - file1
         - file2
         - file3 

     - name: creating a folder on all servers
       file: path={{item}} state=directory
       with_items:
         - folder1
         - folder2
         - folder3  
...
